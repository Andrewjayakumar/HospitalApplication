<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_grey_100"
    tools:context="com.android.hospitalapplication.Activities.AppointmentReceiptActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/apt_receipt_toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Appointment ID :-"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:padding="20dp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:clickable="false"
        android:id="@+id/apt_id"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Patient Name :-"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:padding="20dp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:clickable="false"
        android:id="@+id/pat_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Doctor Name :-"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:padding="20dp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:clickable="false"
       android:id="@+id/doc_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Appointment Date &amp; Time:-"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:padding="20dp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:clickable="false"
         android:id="@+id/date_time"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:text="Remarks(By Doctor) :-"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:padding="20dp"
        android:elevation="4dp"
        android:textStyle="bold"
        android:clickable="false"
        android:id="@+id/remarks"
        />

</LinearLayout>
