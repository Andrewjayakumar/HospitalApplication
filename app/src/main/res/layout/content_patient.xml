<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_50"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.android.hospitalapplication.PatientActivity"
        tools:showIn="@layout/activity_patient">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/set_appointment"
                android:background="@drawable/rectangle"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textAlignment="center">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_above="@+id/upload_report"
                    android:layout_margin="5dp"
                    android:background="@drawable/set_appoint"
                    android:layout_gravity="center_horizontal"
                    android:text="Profile Info"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Appointment"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/profile_info"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textAlignment="center">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_above="@+id/upload_report"
                    android:layout_margin="8dp"
                    android:background="@drawable/profile_pic"
                    android:layout_gravity="center_horizontal"

                    android:text="Profile Info"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:layout_margin="1dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textStyle="bold"
                    />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <FrameLayout
                android:id="@+id/upload_report"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textAlignment="center">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_above="@+id/upload_report"
                    android:background="@drawable/upload"
                    android:text="Profile Info"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Reports"
                    android:layout_margin="1dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textAlignment="center"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/view_prescription"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textAlignment="center"
                >


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/upload_report"
                    android:padding="5dp"
                    android:layout_margin="28dp"
                    android:background="@drawable/viewdoc"
                    android:layout_gravity="center_horizontal"
                    android:text="Profile Info"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Prescription"
                    android:layout_margin="1dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp">
            <FrameLayout
                android:id="@+id/dietplan"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textAlignment="center">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/upload_report"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_room_service_black_24dp"
                    android:backgroundTint="@color/md_grey_400"
                    android:text="Profile Info"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Plan"
                    android:layout_margin="1dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textAlignment="center"
                    android:paddingLeft="6dp"
                    android:textStyle="bold"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/view_status"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:elevation="4dp"
                android:clickable="true"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textAlignment="center">


                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_above="@+id/upload_report"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="28dp"
                    android:background="@drawable/maintaitenance"
                    android:backgroundTint="@color/md_orange_400"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_margin="1dp"
                    android:paddingLeft="10dp"
                    android:text="Check Status"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
